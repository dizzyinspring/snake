<!DOCTYPE html>
<html>
<head>
<meta charset = 'UTF-8'>

<style type = 'text/css'>
    p{left:20px; top:300px;position:fixed}
</style>
</head>

<body>
<p id = 'score'></p>


<script>
var snake = [
    {x:3,y:1},
    {x:2,y:1},
    {x:1,y:1}
    ];
var food;
var map = [];
var score;
var direction;
var e;
var rawdirect;
var direct;
var speed = 100;



for(var x = 0;x<=19;++x) {
    for(var y = 0;y<=19;++y) {
        createDiv = document.createElement('div');
        createDiv.id = x + '_' + y;
        createDiv.className = 'plate';
        createDiv.style.width = '15px';
        createDiv.style.height = '15px';
        createDiv.style.left = x * 15 + 'px';
        createDiv.style.top = y * 15 + 'px';
        createDiv.style.position = 'absolute';
        createDiv.innerHTML = null;
        document.body.appendChild(createDiv);
        var atom = {};
        atom.x = x;
        atom.y = y;
        map.push(atom);
    }
}

snake_show();

function Food(){
    var space = map;
    this.newfood = function(){
        for(var i = 0;i<snake.length;i++){
            for(var j = 0;j<space.length;j++){
                if(space[j].x == snake[i].x && space[j].y == snake[i].y)
                    space.splice(j,1);
            }
        }
        food = space[Math.floor(Math.random()*space.length)];
    };

    this.food_show = function(){
        document.getElementById(food.x+'_'+food.y).innerHTML = 1;
    }
}

fd = new Food();
fd.newfood();
fd.food_show();


function move39(){
  snake.unshift({x:snake[0].x+1,y:snake[0].y});
  tail = snake.pop();
}

function move37(){
  snake.unshift({x:snake[0].x-1,y:snake[0].y});
  tail = snake.pop();
}

function move38(){
  snake.unshift({x:snake[0].x,y:snake[0].y-1});
  tail = snake.pop();
}

function move40(){
  snake.unshift({x:snake[0].x,y:snake[0].y+1});
  tail = snake.pop();
}

function eatfood(){
    if(snake[0].x == food.x && snake[0].y == food.y){
        fd.newfood();
        snake.push(tail);
    }
}

function freshboard(){
    var plate = document.getElementsByClassName('plate');
    for(var i = 0;i<plate.length;i++)
        plate[i].innerHTML = '';
}

function movesnake(){
    freshboard();
    if((snake[0].x == snake[1].x) && (snake[0].y > snake[1].y))
        direction = 40;
    if((snake[0].x == snake[1].x) && (snake[0].y < snake[1].y))
        direction = 38;
    if((snake[0].y == snake[1].y) && (snake[0].x > snake[1].x))
        direction = 39;
    if((snake[0].y == snake[1].y) && (snake[0].x < snake[1].x))
        direction = 37;
    if(!rawdirect){
        direct = direction;
    } else if (direction ==rawdirect-2 || direction == rawdirect+2 || direction == rawdirect){
        direct = direction;
    }else{
        direct = rawdirect;
    }

    eval('move'+direct+'()');
    eatfood();

    fd.food_show();
    snake_show();
    score = snake.length - 3;
    score_show();
    failtest();
}

snake_id = setInterval("movesnake()",speed);

document.onkeydown = function(event){
    e = event;
    if(e &&e.keyCode == 37)
        rawdirect = 37;
    if(e && e.keyCode == 38)
        rawdirect = 38;
    if(e && e.keyCode == 39)
        rawdirect = 39;
    if(e && e.keyCode == 40)
        rawdirect = 40;
}

function snake_show(){
    for(i=0;i<snake.length;++i){
        if(snake[0].x<0 || snake[0].x>19 || snake[0].y<0 || snake[0].y>19)
            return;
        document.getElementById(snake[i].x+'_'+snake[i].y).innerHTML = 1;
    }
}

function failtest(){
    if(snake[0].x<0 || snake[0].x>19 || snake[0].y<0 || snake[0].y>19){
        alert('游戏结束,得分为：'+score);
        clearInterval(snake_id)
    }
    for(i = 1;i<snake.length;i++){
        if(snake[0].x == snake[i].x && snake[0].y == snake[i].y){
            alert('游戏结束,得分为：'+score);
            clearInterval(snake_id)
        }
    }
}

function score_show(){
    document.getElementById('score').innerHTML = '得分:'+score;
}

</script>
</body>
</html>
